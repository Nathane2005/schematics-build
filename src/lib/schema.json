{
  "$schema": "http://json-schema.org/schema",
  "id": "library",
  "title": "Create a library",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Library name"
    },
    "sourceDir": {
      "type": "string",
      "default": "src",
      "alias": "sd"
    },
    "ngmodule": {
      "type": "boolean",
      "default": false
    }
  },
  "required": [
    "name"
  ]
}
